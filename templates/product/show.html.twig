{% extends 'base.html.twig' %}

{% block title %}Mon produit{% endblock %}

{% block content %}
    <h1>Mon produit</h1>
    <div class="row">
        <div class="col-md-5">
            <img src="/uploads/{{ product.illustration }}" alt="{{ product.illustration }}" class="img-fluid">
        </div>
        <div class="col-md-7 my-auto">
            <h3>{{ product.name }}</h3>
            <p>{{ product.subtitle }}</p>
            <span class="product-page-price">{{ product.price/100 }} XPF</span>
            <hr>
            <p>
                {{ product.description }}
            </p>
            <a href="#" class="btn btn-primary">Ajouter au panier</a>
        </div>
    </div>
{% endblock %}
